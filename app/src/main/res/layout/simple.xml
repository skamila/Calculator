<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/display2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="72sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="7">

        <Button
            android:id="@+id/c"
            style="@style/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="C/CE"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/ac"
            style="@style/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="AC"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/div"
            style="@style/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="÷"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/multi"
            style="@style/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="ˣ"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num7"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="7"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num8"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num9"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num4"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num5"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num6"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/sub"
            style="@style/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="-"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num1"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num2"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num3"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/add"
            style="@style/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="+"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/changeSign"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="±"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/num0"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/dot"
            style="@style/NumberButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text=","
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/equal"
            style="@style/ColorButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="="
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowSpan="2"
            app:layout_rowWeight="2" />

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>